{% extends 'base.html.twig' %}

{% block body %}
<section class="newsList">

    {%  for news in newsList %}
        <article>
            <h2>{{ news.title }}</h2>
            <div class="metadata">Ecrit le {{ news.createAt | date('d/m/Y')}} Ã  {{ news.createAt | date('H:i') }}</div>
            <div class="content">
                <img src="{{ news.image }}" alt="">
                {{ news.content | raw }}
                <a href="{{ path('news_show', {'id':news.id}) }}" class="btn btn-primary">Lire la suite</a>
            </div>
        </article>
    {% endfor %}
</section>

{% endblock %}
