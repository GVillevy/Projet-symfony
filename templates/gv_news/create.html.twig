{% extends 'base.html.twig' %}

{% block body %}

    {% if editMode %}
        <h1>Modification de la news</h1>
    {% else %}
        <h1>Cr√©ation d'une news</h1>
    {% endif %}

    {{ form_start(formNews) }}

    {{ form_row(formNews.title,{'attr':{'placeholder':"Titre de la news"}}) }}
    {{ form_row(formNews.content,{'attr':{'placeholder':"Contenu de la news"}}) }}
    {{ form_row(formNews.image,{'attr':{'placeholder':"Image de la news"}}) }}
    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Ajouter news
        {% endif %}
    </button>

    {{ form_end(formNews) }}

{% endblock %}

