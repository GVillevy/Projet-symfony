<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/morph/bootstrap.min.css">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>

    <body>
        <header>

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">ApexUnite</a>

                    <div class="collapse navbar-collapse" id="navbarColor03">

                        <ul class="navbar-nav me-auto">

                            <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
                            {% if is_granted('ROLE_ADMIN')%}
                                <li class="nav-item"><a class="nav-link" href="{{ path('admin_news_index') }}">News admin</a></li>
                            {% else%}
                                <li class="nav-item"><a class="nav-link" href="{{ path('news') }}">News</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item"><a class="nav-link" href="{{ path('admin_news_new') }}">Cree un article</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item"><a class="nav-link" href="{{ path('user_index') }}">User</a></li>
                            {% endif %}
                            {% if app.user %}
                                <li class="nav-link">Bonjour, {{ app.user.username }}</li>
                            {% endif %}
                            {% if app.user %}
                                <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Logout</a></li>
                            {% endif %}
                            {% if app.user %}
                            {% else %}
                                <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Se connecter</a></li>
                                <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>


        {% block body %}{% endblock %}
    </body>
</html>
