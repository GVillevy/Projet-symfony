{% extends 'base.html.twig' %}

{% block title %}PlayOfTheWeek index{% endblock %}

{% block body %}
    <h1>PlayOfTheWeek index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for play_of_the_week in play_of_the_weeks %}
            <tr>
                <td>{{ play_of_the_week.id }}</td>
                <td>{{ play_of_the_week.title }}</td>
                <iframe width="900" height="506" src="{{ play_of_the_week.link }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <td>
                    <a href="{{ path('admin_potw_show', {'id': play_of_the_week.id}) }}">show</a>
                    <a href="{{ path('admin_potw_edit', {'id': play_of_the_week.id}) }}">edit</a>
                    {{ include('play_of_the_week/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_potw_new') }}">Create new</a>
{% endblock %}
