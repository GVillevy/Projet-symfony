{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ news.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ news.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ news.content }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <img src="{{ news.image }}">
        </tr>
        <tr>
            <th>CreateAt</th>
            <td>{{ news.createAt ? news.createAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('news') }}">back to list</a>

{% endblock %}
