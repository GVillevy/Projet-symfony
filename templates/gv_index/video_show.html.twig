{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ video.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ video.titre }}</td>
        </tr>
        <tr>
            <th>Lien</th>
            <iframe width="900" height="506" src="{{ video.lien }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </tr>
        <tr>
            <th>PostedAt</th>
            <td>{{ video.postedAt ? video.postedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Auteur</th>
            <td>{{ video.auteur }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ video.description | raw }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('video_index') }}">back to list</a>

{% endblock %}
