{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>{{ video.titre }}</h1>
    <div id="content">
        <iframe width="900" height="506" src="{{ video.lien }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <p>Posté le {{ video.postedAt ? video.postedAt|date('Y-m-d H:i:s') : '' }} par {{ video.auteur }}</p>
        <span class="badge bg-primary">Tags : {{ video.tags }}</span>
        <h5>Description</h5>
        <p>{{ video.description | raw }}</p>

        <a href="{{ path('video_index') }}">Retour à la liste</a>
    </div>

{% endblock %}
