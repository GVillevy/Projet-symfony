{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    {% if app.request.method == 'POST' %}
        <div>
            {% if (articles | length == 0) and (videos | length == 0) %}
                <h4>Aucun résulat pour votre recherche.</h4>
            {% else %}

                <h3 class="mt-3">Vos résulats de recherche :</h3>
                <h4 class="mt-4">Articles :</h4>
                {% for article in articles %}
                    <div class="mt-3 p-3 bg-light border rounded">
                        <a href="{{ path('article_show', {'id': article.id}) }}">
                            <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ article.titre }}</h6>
                        </a>
                    </div>
                {% endfor %}
                <h4 class="mt-4">videos :</h4>
                {% for video in videos %}
                    <div class="mt-3 p-3 bg-light border rounded">
                        <a href="{{ path('video_show', {'id': video.id}) }}">
                            <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ video.titre }}</h6>
                        </a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
